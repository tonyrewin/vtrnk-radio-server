from selenium import webdriver
from selenium.webdriver.common.by import By
import time

def test_play_stop_button_color():
    """Check that play-stop-btn in /web/css/styles.css has grey color (#333)."""
    driver = webdriver.Chrome()
    
    try:
        driver.get("https://vtrnk.online")
        time.sleep(5)
        
        play_buttons = driver.find_elements(By.CLASS_NAME, "play-stop-btn")
        assert len(play_buttons) > 0, "No play-stop-btn found on page"
        for button in play_buttons:
            color = button.value_of_css_property("background-color")
            assert "rgb(51, 51, 51)" in color.lower(), f"Play-stop-btn color is not grey (#333): {color}"
        
        print("play-stop-btn is grey (#333)")
    
    finally:
        driver.quit()